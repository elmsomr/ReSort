require("dotenv").config();
const express = require("express");
const cors = require("cors");
const { Pool } = require("pg");

const app = express();
app.use(cors());
app.use(express.json());

// PostgreSQL baÄŸlantÄ±sÄ±
const pool = new Pool({
  user: "postgres",          
  host: "localhost",
  database: "waste_db",      
  password: "3906",          
  port: 5432,
});

// BaÄŸlantÄ± testi
pool.query('SELECT NOW()', (err, res) => {
  if (err) {
    console.error('âŒ BaÄŸlantÄ± hatasÄ±:', err);
  } else {
    console.log('âœ… BaÄŸlantÄ± baÅŸarÄ±lÄ±! Åžu anki zaman:', res.rows[0].now);
  }
});

// ðŸ“Œ 1ï¸âƒ£ VeritabanÄ±ndan tÃ¼m verileri getir
app.get("/api/waste", async (req, res) => {
  try {
    const result = await pool.query("SELECT * FROM waste_items ORDER BY timestamp DESC LIMIT 100");
    res.json(result.rows);
  } catch (err) {
    console.error("âŒ Veri Ã§ekme hatasÄ±:", err.message);
    res.status(500).send("VeritabanÄ± hatasÄ±");
  }
});

// ðŸ“Œ 2ï¸âƒ£ Yeni atÄ±k verisini veritabanÄ±na kaydet
app.post("/api/waste", async (req, res) => {
  const { track_id, global_id, class: wasteClass, timestamp } = req.body;

  try {
    const result = await pool.query(
      "INSERT INTO waste_items (track_id, global_id, class, timestamp) VALUES ($1, $2, $3, $4) RETURNING *",
      [track_id, global_id, wasteClass, timestamp]
    );
    console.log("âœ… Yeni veri eklendi:", result.rows[0]);
    res.json({ message: "Veri kaydedildi!", data: result.rows[0] });
  } catch (err) {
    console.error("âŒ Veri ekleme hatasÄ±:", err.message);
    res.status(500).send("VeritabanÄ± hatasÄ±");
  }
});


// Sunucuyu baÅŸlat
app.listen(5000, () => {
  console.log("ðŸš€ Backend Ã§alÄ±ÅŸÄ±yor: http://localhost:5000");
});
